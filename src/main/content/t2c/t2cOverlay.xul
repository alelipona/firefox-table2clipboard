<?xml version="1.0"?>

<!DOCTYPE overlay SYSTEM "chrome://t2c/locale/t2c.dtd" >

<?xul-overlay href="chrome://t2c/content/commonOverlay.xul"?>

<overlay id="t2cOverlay"
         xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

    <!-- Command set Firefox-->
    <commandset id="mainCommandSet"
                commandupdater="true"
                events="focus,select"
                oncommandupdate="gTable2Clip.goUpdateSelectMenuItems();">
        <command id="cmd_copyT2C"/>
        <command id="cmd_copyT2CAllTable"/>
    </commandset>

    <!-- Command set Thunderbird-->
    <commandset id="mailCommands"
                commandupdater="true"
                events="focus,select"
                oncommandupdate="gTable2Clip.goUpdateSelectMenuItems();">
        <command id="cmd_copyT2C"/>
        <command id="cmd_copyT2CAllTable"/>
    </commandset>

    <!-- Command set Mozilla-->
    <commandset id="commands"
                commandupdater="true"
                events="focus,select"
                oncommandupdate="gTable2Clip.goUpdateSelectMenuItems();">
        <command id="cmd_copyT2C"/>
        <command id="cmd_copyT2CAllTable"/>
    </commandset>

    <!-- Context Menu Firefox, Mozilla, NS8, Flock -->
    <popup id="contentAreaContextMenu">
        <menuseparator id="context-t2c:SepBegin" insertbefore="context-sep-paste" />
        <menuitem id="context-t2c:Copy" insertbefore="context-sep-paste" />
        <menuitem id="context-t2c:CopyWholeTable" insertbefore="context-sep-paste" />
        <menuitem id="context-t2c:SelectTableRow" insertbefore="context-sep-paste" />
        <menuitem id="context-t2c:SelectTableColumn" insertbefore="context-sep-paste" />
        <menuitem id="context-t2c:SelectTable" insertbefore="context-sep-paste" />
        <menuseparator id="context-t2c:SepEnd" insertbefore="context-sep-paste" />
    </popup>

    <!-- Context Menu Thunderbird 2.x -->
    <popup id="messagePaneContext">
        <menuseparator id="context-t2c:SepBegin" insertbefore="messagePaneContext-sep-open" />
        <menuitem id="context-t2c:Copy" insertbefore="messagePaneContext-sep-open" />
        <menuitem id="context-t2c:CopyWholeTable" insertbefore="messagePaneContext-sep-open" />
        <menuitem id="context-t2c:SelectTableRow" insertbefore="messagePaneContext-sep-open" />
        <menuitem id="context-t2c:SelectTableColumn" insertbefore="messagePaneContext-sep-open" />
        <menuitem id="context-t2c:SelectTable" insertbefore="messagePaneContext-sep-open" />
        <menuseparator id="context-t2c:SepEnd" insertbefore="messagePaneContext-sep-open" />
    </popup>

    <!-- Context Menu Thunderbird 3.x -->
    <popup id="mailContext">
        <menuseparator id="context-t2c:SepBegin" insertbefore="mailContext-sep-open" />
        <menuitem id="context-t2c:Copy" insertbefore="mailContext-sep-open" />
        <menuitem id="context-t2c:CopyWholeTable" insertbefore="mailContext-sep-open" />
        <menuitem id="context-t2c:SelectTableRow" insertbefore="mailContext-sep-open" />
        <menuitem id="context-t2c:SelectTableColumn" insertbefore="mailContext-sep-open" />
        <menuitem id="context-t2c:SelectTable" insertbefore="mailContext-sep-open" />
        <menuseparator id="context-t2c:SepEnd" insertbefore="mailContext-sep-open" />
    </popup>

    <!-- Edit Menu Firefox, available in Thunderbird since version 2.0.0.16 -->
    <menupopup id="menu_EditPopup">
        <menuitem   id="editMenu-t2c:Copy"
                    label="&cmd.editMenu-copyselection.label;"
                    accesskey="&editMenu-t2c-copy.accesskey;"
                    key="key_t2c"
                    command="cmd_copyT2C"
                    position="6">
        </menuitem>
        <menuitem   id="editMenu-t2c:CopyAllTables"
                    accesskey="&editMenu-t2c-copyalltables.accesskey;"
                    key="key_t2c_copyalltables"
                    command="cmd_copyT2CAllTable"
                    position="6">
        </menuitem>
    </menupopup>

    <!-- SeaMonkey 2.x -->
    <menupopup id="menu_Edit_Popup">
        <menuitem   id="editMenu-t2c:Copy"
                    label="&cmd.editMenu-copyselection.label;"
                    accesskey="&editMenu-t2c-copy.accesskey;"
                    key="key_t2c"
                    command="cmd_copyT2C"
                    insertafter="menu_copy">
        </menuitem>
        <menuitem   id="editMenu-t2c:CopyAllTables"
                    accesskey="&editMenu-t2c-copyalltables.accesskey;"
                    key="key_t2c_copyalltables"
                    command="cmd_copyT2CAllTable"
                    insertafter="menu_copy">
        </menuitem>
    </menupopup>

    <!-- Shortcuts Element Firefox -->
    <keyset id="mainKeyset">
        <key id="key_t2c" />
        <key id="key_t2c_copyalltables" />
    </keyset>

    <!-- Shortcuts Element Thunderbird -->
    <keyset id="mailKeys">
        <key id="key_t2c" />
        <key id="key_t2c_copyalltables" />
    </keyset>

    <!-- Shortcuts Element Mozilla -->
    <keyset id="navKeys">
        <key id="key_t2c" />
        <key id="key_t2c_copyalltables" />
    </keyset>

    <!-- Tools menu Firefox, Thunderbird -->
    <menupopup id="menu_ToolsPopup">
        <menuitem id="toolsMenu-t2c:Settings"
                insertafter="devToolsSeparator,javascriptConsole" />
    </menupopup>

    <menupopup id="taskPopup">
        <menuitem id="toolsMenu-t2c:Settings"
                insertafter="devToolsSeparator,downloadmgr" />
    </menupopup>
</overlay>